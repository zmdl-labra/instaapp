<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="instaclone.mosh">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Grid>
                <Button Text="Back" CornerRadius="100" Clicked="Button_Clicked" HorizontalOptions="Start" BackgroundColor="Transparent" TextColor="Black"/>
                <Label Text="MOSH" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" Padding="0,15,0,0"/>
            </Grid>
            <StackLayout Padding="0,50,0,0">
                <Frame CornerRadius="100"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center"
                   Padding="0">
                    <Image Source="https://st3.depositphotos.com/1037987/15097/i/600/depositphotos_150975580-stock-photo-portrait-of-businesswoman-in-office.jpg"
                       Aspect="AspectFill"/>
                </Frame>
                <Label Text="No woman no cry"
                       Margin="30"
                   TextColor="Black"
                   FontSize="Subtitle" FontAttributes="Italic,Bold" HorizontalTextAlignment="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>